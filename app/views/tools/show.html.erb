<!-- app/views/tools/show.html.erb (ou une autre vue appropriée) -->
<div class="container">
  <div class="row">
    <div class="col">
      <div class="row mt-4 justify-content-center">
        <div class="col-md-8 mb-4">
          <div class="card" id="card">
            <% if @tool.image.present? %>
              <%= image_tag @tool.image.url, class: 'card-img-top' %>
            <% end %>
            <div class="card-body p-0">
              <div class="px-3 py-2">
                <p><strong>Description :</strong> <%= @tool.description %></p>
                <p><strong>Ville :</strong> <%= @tool.city %></p>
              </div>
            </div>
            <%= link_to 'Nouvelle location', new_booking_path, class: 'btn btn-success btn-sm w-100 mt-4' %>
            <%= link_to 'Retour à la liste des outils', tools_path, class: 'btn btn-warning btn-sm w-100 mt-4' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="container my-5">
  <h1 class="mb-4"><%= action_name == 'new' ? 'Créer une Nouvelle Location' : 'Éditer une Location' %></h1>
  <%= form_with(model: @booking, local: true, class: "needs-validation", novalidate: true) do |form| %>
    <div class="mb-3">
      <%= form.label :name, 'Nom de l’outil', class: "form-label" %>
      <%= form.text_field :name, class: "form-control", required: true %>
      <div class="invalid-feedback">
        Veuillez entrer le nom de l’outil.
      </div>
    </div>

    <div class="mb-3">
      <%= form.label :date, 'Date de Location', class: "form-label" %>
      <%= form.date_field :date, class: "form-control", required: true %>
      <div class="invalid-feedback">
        Veuillez entrer la date de location.
      </div>
    </div>

    <%= form.submit action_name == 'new' ? 'Créer Location' : 'Mettre à jour la Location', class: "btn btn-primary" %>
  <% end %>
  <%= link_to 'Retour', bookings_path, class: "btn btn-secondary mt-3" %>
</div>
