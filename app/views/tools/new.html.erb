<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="w-50">
    <h1 class="text-center">Ajouter une nouvelle annonce</h1>

    <%= simple_form_for @tool, html: { multipart: true } do |form| %>
      <div class="form-group">
        <%= form.input :name, class: 'form-control' %>
      </div>
    
      <div class="form-group">
        <%= form.input :description, as: :text, class: 'form-control' %>
      </div>
    
      <div class="form-group">
        <%= form.input :city, class: 'form-control' %>
      </div>
    
      <div class="form-group">
        <%= form.input :image, as: :file, class: 'form-control-file' %>
      </div>
    
      <%= form.button :submit, "CrÃ©er l'annonce", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
