<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title text-center mb-4">Ajouter une nouvelle annonce</h1>

          <%= simple_form_for @tool, html: { multipart: true } do |form| %>
            <div class="form-group">
              <%= form.input :name, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= form.input :description, as: :text, class: 'form-control', input_html: { rows: 3 } %>
            </div>

            <div class="form-group">
              <%= form.input :city, class: 'form-control' %>
            </div>

            <div class="form-group mb-4"> <!-- Ajout de la classe mb-4 pour une marge en bas -->
              <%= form.label :image, class: 'form-label' %>
              <%= form.file_field :image, class: 'form-control-file' %>
            </div>

            <div class="form-group text-center"> <!-- Ajout de la classe text-center pour centrer le contenu -->
              <%= form.label :category_ids, "Sélectionner une ou plusieurs catégories", class: 'form-label' %>
              <div class="d-flex justify-content-center"> <!-- Utilisation de flexbox pour centrer horizontalement -->
                <%= form.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
                  <div class="form-check">
                    <%= cb.check_box %>
                    <%= cb.label %>
                  </div>
                <% end %>
              </div>
            </div>

            <div class="form-group text-center mt-4"> <!-- Ajout de la classe text-center pour centrer le bouton -->
              <%= form.button :submit, "Créer l'annonce", class: 'btn btn-primary btn-lg', style: 'background-color: #8e44ad; border-bottom: 3px solid #e74c3c;' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
