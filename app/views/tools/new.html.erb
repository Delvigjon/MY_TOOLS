<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card" style="box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);">
        <div class="card-body" style="padding: 20px; background-color: #e0e0e0; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
          <h1 class="card-title text-center mb-4" style="font-family: 'Roboto', sans-serif;">Ajouter une nouvelle annonce</h1>

          <%= simple_form_for @tool, html: { multipart: true } do |form| %>
            <div class="form-group mb-3" style="padding: 10px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); margin-bottom: 15px;">
              <%= form.input :name, label: "Nom", class: 'form-control', style: 'border: none; font-family: "Roboto", sans-serif;' %>
            </div>

            <div class="form-group mb-3" style="padding: 10px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); margin-bottom: 15px;">
              <%= form.input :description, as: :text, label: "Description", class: 'form-control', input_html: { rows: 3 }, style: 'border: none; font-family: "Roboto", sans-serif;' %>
            </div>

            <div class="form-group mb-3" style="padding: 10px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); margin-bottom: 15px;">
              <%= form.input :city, label: "Ville", class: 'form-control', style: 'border: none; font-family: "Roboto", sans-serif;' %>
            </div>
             <div class="field">
              <%= form.label :price_per_day %>
              <%= form.number_field :price_per_day %> euros
              </div>

            <div class="form-group mb-3" style="padding: 10px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); margin-bottom: 15px;">
              <%= form.label :image, "Image", class: 'form-label' %>
              <%= form.file_field :image, class: 'form-control-file' %>
            </div>

            <div class="form-group mb-3 text-center" style="padding: 10px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); margin-bottom: 15px;">
              <%= form.label :category_ids, "Sélectionner une ou plusieurs catégories", class: 'form-label' %>
              <div class="d-flex justify-content-center">
                <%= form.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
                  <div class="form-check">
                    <%= cb.check_box %>
                    <%= cb.label %>
                  </div>
                <% end %>
              </div>
            </div>

            <div class="form-group mb-3 text-center">
              <%= form.button :submit, "Créer l'annonce", class: 'btn btn-primary btn-lg custom-button', style: 'background: #F1B60D; color: black; font-family: "Roboto", sans-serif; width: 100%; border: none;' %>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

