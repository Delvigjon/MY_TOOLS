<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="w-50">
    <h2 class="text-center">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "my-4" }) do |f| %>
      <div class="form-group">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "form-control" } %>
      </div>
      
      <div class="form-group">
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "form-control" } %>
      </div>
      
      <div class="form-check mb-3">
        <%= f.input :remember_me, as: :boolean, label: false, wrapper_class: "form-check-input" if devise_mapping.rememberable? %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>
      
      <div class="form-group">
        <%= f.button :submit, "Log in", class: "btn btn-primary w-100" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
